<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.bvaleo.handtrainer.ui.activities.RegistrationActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLoginR"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:gravity="center_vertical"
        android:inputType="text" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassR"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etLoginR"
        android:layout_alignLeft="@+id/etLoginR"
        android:layout_alignStart="@+id/etLoginR"
        android:layout_marginBottom="44dp"
        android:text="@string/loginText"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassR"
        android:layout_alignLeft="@+id/etPassR"
        android:layout_alignStart="@+id/etPassR"
        android:text="@string/passText"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/reg"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="@string/signin"
        android:textColor="@color/text_color_white" />
</RelativeLayout>